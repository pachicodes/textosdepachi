---
layout: base.njk
---

<article class="post">
  <header class="post-header">
    <h1 class="post-title">{{ title }}</h1>
    <time class="post-date" datetime="{{ page.date }}">{{ page.date | dataPT }}</time>
    {% if tags %}
    <div class="post-tags">
      {% for tag in tags %}
        {% if tag != "post" %}
        <span class="tag">{{ tag }}</span>
        {% endif %}
      {% endfor %}
    </div>
    {% endif %}
  </header>
  
  <div class="post-content">
    {{ content | safe }}
  </div>
  
  <footer class="post-footer">
    <a href="javascript:history.back()" class="back-link">â† Voltar</a>
  </footer>
</article>
